# ARCHER PBS Script
#!/bin/bash --login

#PBS -l select=1
#PBS -l walltime=00:1:00
#PBS -A d154
#PBS -N cfd

#Change to directory that the job was submitted from
cd $PBS_O_WORKDIR

# Set the number of threads to 4
# There are 4 OpenMP threads per MPI process
OMP_NUM_THREADS=4
export OMP_NUM_THREADS
export MPICH_MAX_THREAD_SAFETY=MPI_THREAD_MULTIPLE

aprun -n 4 -d 4 ./cfd 4 5000
